
{% assign this = section.settings %}


<section class='page-section standard-diptych'>
<div class='inner-column'>

  <main class='content'>
    <aside class='visual'>
      <figure class='image'>
        <img src='{{this.image}}' />
      </figure>
    </aside>
    <aside class='story'>
      <h2 class='heading'>
        <span>{{this.heading}} hello</span>
      </h2>

      <h3 class='subheading'>
        <span>{{this.subheading}}</span>
      </h3>

      <div class='richtext'>
        {{- this.content -}}
      </div>
    </aside>
  </main>

</div>
</section>



{% schema %}
  {
    "name": "Standard diptych",
    "settings": [
      {
        "type": "text",
        "id": "section-heading",
        "label": "Section heading",
        "default": "Section heading....."
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Standard Diptych Heading"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Standard Diptych Subheading"
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "Rich text",
        "default": "Standard Diptych Rich text content. Standard Diptych Rich text content. Standard Diptych Rich text content."
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "default": "https://placehold.it/1600"
      }
    ]
  }
{% endschema %}



