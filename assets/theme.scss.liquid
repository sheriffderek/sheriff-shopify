// $simple-landing-splash
.simple-landing-splash {
  background: $highlight;
  color: $highlight;
  background-image: url('https://placehold.it/2400x1800');
  background-size: cover;
  background-position: center;
  .inner-column {
    height: 50vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }
  .message {
    // color: $color;
  }
  .heading {
    font-size: 30px; // $todo
    text-transform: uppercase;
  }
  .subheading {
    margin-top: $pad;
  }
  .actions {
    margin-top: $pad*2;
  }
  @include bp('0-1') {
    .message {
      padding-bottom: $pad*4;
    }
  }
  @include bp(1) {
    .inner-column {
      justify-content: center;
    }
    .message {
      width: 100%;
      max-width: $tight-column-width;
      margin: 0 auto;
    }
  }
  @include bp('1-2') {
    .heading {
      font-size: 7vw;
    }
  }
  @include bp(2) {
    .inner-column {
      height: 70vh;
      min-height: 600px;
    }
    .heading {
      font-size: 70px;
    }
  }
}

