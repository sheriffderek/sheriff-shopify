// $general
p, li {
  a {
    display: inline-block;
    text-decoration: underline;
    color: $color;
  }
  strong {
    font-weight: 700;
  }
  em {
    font-style: italic;
  }
}

@mixin article-styles() {
  p, h1, h2, h3, li {
    max-width: 740px; 
  }
  p {
    @include standard-voice();
  }
  h1 {
    @include loud-voice();
  }
  h2 {
    @include attention-voice();
  }
  h3 {
    color: $color;
  }
  p + p {
    margin-top: $pad;
  }
  p + h2 {
    margin-top: $pad*2;
  }
  p + h3 {
    margin-top: $pad*2;
  }
  h2 + p {
    margin-top: $pad;
  }
  h3 + p {
    margin-top: $pad;
  }
  ul {
    list-style: disc;
    margin: 1rem;
    li:not(:first-of-type) {
      margin-top: $pad*.5;
    }
  }
  ol {
    list-style: initial;
    margin: 1rem;
    li:not(:first-of-type) {
      margin-top: $pad*.5;
    }
  }
}

// $type
