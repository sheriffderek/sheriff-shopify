// $story-diptych
.story-diptych {
  // background: $color-light;
  .inner-column {
    display: flex;
    flex-direction: column;
  }
  @include bp('0-1') {
    .story {
      margin-top: $pad;
    }
  }
  @include bp(1) {
    .visual {
      // transform: translate(-10%, -20%);
      max-width: 80%;
    }
    .story {
      position: relative;
      z-index: 1;
    }
  }
  @include bp('1-2') {
    .story {
      width: 80%;
      transform: translate(15%, -120px);
    }
  }
  @include bp(2) {
    .inner-column {
      flex-direction: row;
      align-items: center;
      padding-top: $pad*4;
      padding-bottom: $pad*4;
    }
    .visual, .story {
      // flex-basis: 50%;
      width: 50%;
    }
    .story {
      display: flex;
      flex-direction: column;
      justify-content: center;
      padding: $pad*6;
    }
    &:nth-of-type(even) {
      //
    }
    &:nth-of-type(odd) {
      .inner-column {
        flex-direction: row-reverse;
      }
    }
  }
}



