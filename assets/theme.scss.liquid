// $style-guide
.swatch-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  .swatch {
    padding: $pad*3 $pad;
    @include code-voice();
    flex-basis: 100%;
    &.black {
      background: $black;
      color: $white;
    }
    &.white {
      background: $white;
    }
    &.gray {
      background: $gray;
    }
    &.gray-light {
      background: $gray-light;
    }
    &.gray-dark {
      background: $gray-dark;
    }
    &.gray-lighter {
      background: $gray-lighter;
    }
    &.color {
      background: $color;
    }
    &.color-light {
      background: $color-light;
    }
    &.color-dark {
      background: $color-dark;
    }
    &.highlight {
      background: $highlight;
    }
    &.highlight-light {
      background: $highlight-light;
    }
    &.highlight-dark {
      background: $highlight-dark;
    }
    &.alternate {
      background: $alternate;
    }
    &.alternate-light {
      background: $alternate-light;
    }
    &.alternate-dark {
      background: $alternate-dark;
    }
  }
  @include bp(1) {
    .swatch {
      flex-basis: 33%;
    }
  }
}

